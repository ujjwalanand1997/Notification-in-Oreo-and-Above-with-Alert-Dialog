<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="@dimen/dim10dp"
    android:layout_margin="@dimen/dim10dp"
    android:background="@drawable/record_background"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <ImageView
        android:layout_width="@dimen/dim60dp"
        android:layout_height="@dimen/dim60dp"
        android:id="@+id/image_imported"
        android:src="@mipmap/ic_launcher_round"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dim10dp"
        android:textSize="@dimen/dim20sp"
        android:fontFamily="@font/aclonica"
        android:textColor="@color/black"
        android:layout_gravity="center"
        />

</LinearLayout>